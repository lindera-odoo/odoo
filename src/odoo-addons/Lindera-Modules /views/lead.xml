<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="lead_form_home" model="ir.ui.view">
        <field name="name">lead.kanban.home.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='team_id']" position="after">
                <field name="show_dates" string="Show Dates" invisible="True"/>
                <field name="start_date" string="Start" attrs="{'invisible':[('show_dates','!=', True)]}"/>
                <field name="end_date" string="Ende" attrs="{'invisible':[('show_dates','!=', True)]}"/>
            </xpath>
        </field>
    </record>
    <record id="lead_kanban_home" model="ir.ui.view">
        <field name="name">lead.kanban.home.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="senior_number_string"/>
                <field name="date_string"/>
            </xpath>
            <xpath expr="//t[@t-esc='record.partner_id.value']" position="after">
                <div>
                    <t t-esc="record.date_string.value"/>
                </div>
            </xpath>
            <xpath expr="//t[@t-esc='record.partner_id.value']" position="after">
                <t t-esc="record.senior_number_string.value"/>
            </xpath>
        </field>
    </record>
    <record id="lead_list_home" model="ir.ui.view">
        <field name="name">lead.list.home.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="senior_number" string="Senioren"/>
                <field name="show_dates" string="Show Dates" invisible="True"/>
                <field name="start_date" string="Start" attrs="{'invisible':[('show_dates','!=', True)]}"/>
                <field name="end_date" string="Ende" attrs="{'invisible':[('show_dates','!=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>